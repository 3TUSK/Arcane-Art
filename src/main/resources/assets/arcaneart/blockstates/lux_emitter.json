{
  "multipart": [
        {   "when": { "facing": "west"},
            "apply": { "model": "arcaneart:block/lux_emitter"}
        },
        {   "when": { "facing": "north"},
            "apply": { "model": "arcaneart:block/lux_emitter", "y": 90}
        },
        {   "when": { "facing": "east"},
            "apply": { "model": "arcaneart:block/lux_emitter", "y": 180}
        },
        {   "when": { "facing": "south"},
            "apply": { "model": "arcaneart:block/lux_emitter", "y": 270}
        },
        {   "when": { "facing": "up"},
            "apply": { "model": "arcaneart:block/lux_emitter", "x": 90}
        },
        {   "when": { "facing": "east"},
            "apply": { "model": "arcaneart:block/lux_emitter", "x": 270}
        }
  ]
}
